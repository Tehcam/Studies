<p id="notice"><%= notice %></p>

<h1>Rayons</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rayons.each do |rayon| %>
      <tr>
        <td><%= rayon.label %></td>
        <td><%= link_to 'Show', rayon %></td>
        <td><%= link_to 'Edit', edit_rayon_path(rayon) %></td>
        <td><%= link_to 'Destroy', rayon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

