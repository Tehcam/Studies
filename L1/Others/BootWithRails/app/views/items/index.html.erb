<header class="navbar bg-primary">
  <h1 class="navbar-brand">Items</h1>
  <%= link_to 'New Item', new_item_path, {class: "btn btn-info"} %>
</header>

<p id="notice"><%= notice %></p>

<table class="container">
  <thead>
    <tr class="list-group-item">
      <th>Label</th>
      <th>Bought</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr class="list-group-item">
        <td><%= item.label %></td>
        <td><%= item.bought %></td>
        <td><%= link_to 'Show', item, {class: "btn btn-success"} %></td>
        <td><%= link_to 'Edit', edit_item_path(item), {class: "btn btn-primary"} %></td>
        <td><%= link_to 'Destroy', item, {class: "btn btn-danger"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


